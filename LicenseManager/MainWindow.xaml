<Window x:Class="LicenseManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LicenseManager"
        xmlns:views="clr-namespace:LicenseManager.Views"
        xmlns:vms="clr-namespace:LicenseManager.ViewModels"
        mc:Ignorable="d"
        Title="Marangoni License Manager"
        Height="450"
        Width="800">

    <Grid Margin="20">
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:ConvalidateLicenseViewModel}">
                <views:ConvalidateLicenseView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:ActivationLicenseViewModel}">
                <views:ActivationLicenseView />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>

</Window>
